<div class="menu-header">
  <div class="ui inverted segment">
    <div class="ui inverted secondary pointing menu">
      <a href="/"  class="item">
        Home
      </a>
      <a href="menu" class="item">
        Menu
      </a>
      <a href="contact" class="item">
        Contact Us
      </a>
      <div class ="right menu">
        <a href="cart" style="margin-top: 10px; margin-right: 10px; color: white">
          Items in your cart: <%= get_cart.item_count %>
          <i class="shopping basket icon" style="float: right; margin-left: 10px;"></i>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="contact">
  <div class="ui raised very padded text container segment" style="padding: 20px;">

    <div class="ui three steps">
      <div class="active step">
        <i class="food icon black"></i>
        <div class="content">
          <div class="title">Review Your Order</div>
        </div>
      </div>
      <div class="disabled step">
        <i class="truck icon"></i>
        <div class="content">
          <div class="title">Enter Delivery Info</div>
        </div>
      </div>
      <div class="disabled step">
        <i class="payment icon"></i>
        <div class="content">
          <div class="title">Your Food is on the Way!</div>
        </div>
      </div>
    </div>


    <div class="cart-header">
        <h1>Please review your order:</h1>
    </div>

    <table class="ui three column table">
      <thead>
        <tr><th>Item</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Action</th>
      </tr></thead>
      <tbody>
        <% @cart.line_items.each do |line_item| %>
          <tr>
            <td><%= line_item.name %></td>
            <td><%= line_item.quantity %></td>
            <td><%= priceVND(line_item.totalprice) %></td>
            <td><%= link_to "Delete", line_item_path(line_item), method: :delete %></td>
          </tr>
        <% end %>
        <tr>
            <td>Delivery Fee</td>
            <td></td>
            <td><%= priceVND(20000) %></td>
            <td></td>
          </tr>
      </tbody>
        <tfoot>
          <tr><th><strong>Total:</strong></th>
          <th></th>
          <th><strong><%= priceVND(@cart.total) %></strong></th>
          <th></th>
        </tr></tfoot>
    </table>

    <%= link_to "Proceed to Checkout", orders_path, method: :get, class: "ui secondary button" %>

  </div>
</div>